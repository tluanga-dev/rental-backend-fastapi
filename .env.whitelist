# Whitelist Configuration Environment Variables
# Copy these to your .env file or set as environment variables

# Enable whitelist configuration (default: true)
USE_WHITELIST_CONFIG=true

# Path to whitelist configuration file (optional)
# If not set, defaults to config/whitelist.json
# WHITELIST_CONFIG_PATH=/path/to/custom/whitelist.json

# CORS Origins (deprecated - use whitelist.json instead)
# This is kept as fallback when USE_WHITELIST_CONFIG=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008,http://localhost:3009,http://localhost:3010,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Security Settings
REQUIRE_HTTPS=false
MAX_REQUEST_SIZE=10485760
RATE_LIMITING_ENABLED=true

# Development Settings
DEBUG_WHITELIST=false
LOG_BLOCKED_REQUESTS=true